.group_content {
  height: 100%;
  position: relative;
}
.group_content .header {
  z-index: 10;
  width: 100%;
  position: fixed;
}
.group_content .header .back {
  height: 48rpx;
  width: 48rpx;
  margin-left: 56rpx;
}
.group_content .header .header_title {
  text-align: center;
  width: 100%;
}
.group_content .header text {
  width: 100%;
  text-align: left;
  text-indent: 56rpx;
}
.group_content .group_content_inner {
  width: 100%;
  height: 100%;
  padding: 40rpx 56rpx 20rpx 56rpx;
  box-sizing: border-box;
  background-color: #fff;
  flex-wrap: wrap;
