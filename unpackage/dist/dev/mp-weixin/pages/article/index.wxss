.article_content {
  height: 100%;
  position: relative;
}
.article_content .article_image {
  width: 100%;
  height: 750rpx;
  z-index: -1;
  position: fixed;
  left: 0;
  top: 0;
}
.article_content .header {
  z-index: 10;
  width: 100%;
  position: fixed;
}
.article_content .header .back {
  height: 48rpx;
  width: 48rpx;
  margin-left: 56rpx;
}
.article_content .header .header_title {
  text-align: center;
  width: 100%;
}
.article_content .header text {
  width: 100%;
  text-align: left;
  text-indent: 56rpx;
}
.article_content .article_content_inner {
  margin-top: 500rpx;
  width: 100%;
  padding: 40rpx 56rpx 20rpx 56rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top-right-radius: 60rpx;
  border-top-left-radius: 60rpx;
}
.article_content .article_content_inner .article_content_top {
  position: relative;
  row-gap: 20rpx;
}
.article_content .article_content_inner .article_content_top .avatar_area {
  position: absolute;
  right: 0rpx;
  top: -110rpx;
}
.article_content .article_content_inner .article_content_top .avatar_area .avatar {
  height: 200rpx;
  width: 200rpx;
  border-radius: 50rpx;
}
.article_content .article_content_inner .article_content_top .name {
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0px;
  line-height: 46rpx;
  color: #333333;
}
.article_content .article_content_inner .article_content_top .score_area {
  column-gap: 12rpx;
}
.article_content .article_content_inner .article_content_top .score_area .score {
  width: 130rpx;
  height: 26rpx;
}
.article_content .article_content_inner .article_content_top .score_area text {
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0px;
  line-height: 34rpx;
  color: #333333;
}
.title {
  font-size: 36rpx;
  color: #8f8f94;
}