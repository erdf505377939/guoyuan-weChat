.user_content {
  background: #f5f6f7;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}
.user_content .user_header {
  padding-top: 54px;
  height: 40px;
  z-index: 10;
  position: relative;
}
.user_content .user_header .back {
  position: absolute;
  left: 56rpx;
  bottom: calc(22px - 24rpx);
  height: 48rpx;
  width: 48rpx;
}
.user_content .user_header text {
  width: 100%;
  text-align: center;
}
.user_content .user_bg {
  height: 740rpx;
  width: 860rpx;
  position: absolute;
  left: -97rpx;
  top: -232rpx;
}
.user_content .user_avatar {
  z-index: 10;
  box-sizing: border-box;
  width: 100%;
  align-items: center;
  margin-top: 54rpx;
}
.user_content .user_avatar .avatar_border {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user_content .user_avatar .avatar_border .tag {
  position: absolute;
  right: 0px;
  top: 0px;
  height: 64rpx;
  width: 64rpx;
  left: calc(50% + 50rpx);
  z-index: 10;
}
.user_content .user_avatar .avatar_border .avatar {
  height: 218rpx;
  width: 218rpx;
  border-radius: 50%;
  box-shadow: 0px 12px 20px rgba(28, 18, 75, 0.37);
}
.user_content .user_info {
  margin-top: 50rpx;
}
.user_content .user_info .user_name {
  text-align: center;
  font-size: 48rpx;
  font-weight: 400;
  letter-spacing: 0px;
  line-height: 72rpx;
  color: #35405a;
}
.user_content .user_info .user_email {
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 0px;
  line-height: 42rpx;
  color: #b2b6c0;
  text-align: center;
}
.user_content .user_trajectory {
  width: 100%;
  margin-top: 38rpx;
}
.user_content .user_trajectory .user_trajectory_contain {
  height: 180rpx;
  width: 630rpx;
  background: white;
  border-radius: 8px;
}
.user_content .user_trajectory .user_trajectory_contain .user_trajectory_item {
  justify-content: center;
  flex: 1;
  align-items: center;
}
.user_content .user_trajectory .user_trajectory_contain .user_trajectory_item .user_trajectory_item_val {
  font-size: 44rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 54rpx;
  color: #35405a;
}
.user_content .user_trajectory .user_trajectory_contain .user_trajectory_item .user_trajectory_item_label {
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 36rpx;
  color: rgba(53, 64, 90, 0.38);
}
.user_content .user_list {
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 46rpx 48rpx 0rpx 48rpx;
  margin-top: 80rpx;
}
.user_content .user_list .user_list_filter {
  width: 100%;
  height: 68rpx;
  width: 150rpx;
  padding-bottom: 52rpx;
  column-gap: 18rpx;
}
.user_content .user_list .user_list_item_border {
  overflow-y: scroll;
  height: 800rpx;
  row-gap: 38rpx;
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
}