.item_border {
  box-sizing: border-box;
  margin-top: 20rpx;
  height: 288rpx;
  width: 638rpx;
  background: white;
  box-shadow: 0px -6rpx 12rpx rgba(173, 174, 179, 0.09), 0px 6rpx 12rpx rgba(173, 174, 179, 0.09);
  border-radius: 28rpx;
  padding: 34rpx;
  column-gap: 34rpx;
}
.item_border .image_area image {
  height: 208rpx;
  width: 208rpx;
  border-radius: 24rpx;
}
.item_border .content_area {
  row-gap: 4rpx;
}
.item_border .content_area .title {
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 0px;
  line-height: 42rpx;
  color: #333333;
}
.item_border .content_area .intro {
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0px;
  line-height: 34rpx;
  color: rgba(51, 51, 51, 0.6);
  display: -webkit-box;
  /* 子元素的排列方式：垂直排列 */
  -webkit-box-orient: vertical;
  /* 设置3行文本之后打点显示 */
  -webkit-line-clamp: 3;
  /* 超出盒子部分隐藏显示 */
  overflow: hidden;
}
.item_border .content_area .score {
  width: 130rpx;
  height: 26rpx;
}